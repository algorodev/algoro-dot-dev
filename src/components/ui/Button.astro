---
type ButtonProps = {
  variant?: 'primary' | 'ghost' | 'subtle';
  class?: string;
}

const { variant = 'primary', class: cls = '' } = Astro.props as ButtonProps;
const base =
  'inline-flex items-center justify-center rounded-xl px-4 py-2 text-sm font-medium transition cursor-pointer';
const ring = 'focus-visible:outline-none focus-visible:ring-2';
const variants = {
  primary: `bg-primary text-primary-fg hover:brightness-110`,
  ghost: `bg-transparent border border-border hover:bg-muted`,
  subtle: `bg-muted text-fg hover:bg-[color-mix(in oklab, var(--color-muted) 80%, var(--color-fg) 0%)]`,
};
---

<button class={`${base} ${ring} ${variants[variant]} ${cls}`}>
  <slot />
</button>
