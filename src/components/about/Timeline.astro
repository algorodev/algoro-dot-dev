---
type TimelineProps = {
  items: {
    title: string;
    organization: string;
    location: string;
    start: string;
    end: string;
  }[]
}

const { items } = Astro.props as TimelineProps;
---

<ul class="mt-4 grid gap-6 relative before:absolute before:left-1.5 before:top-0 before:bottom-0 before:w-px before:bg-border">
  {items.map((it) => (
    <li class="relative pl-6">
      <span class="absolute left-0 top-[.55rem] h-3 w-3 rounded-full bg-primary"></span>
      <div class="rounded-2xl border border-border bg-card p-4">
        <h3 class="text-lg font-semibold">
          {it.title}
          {it.organization && <span class="opacity-70 font-normal"> â€” {it.organization}</span>}
        </h3>
        <div class="text-sm opacity-70 mt-0.5">
          {it.start}{' - '}{it.end ?? 'Present'}
        </div>
      </div>
    </li>
  ))}
</ul>
