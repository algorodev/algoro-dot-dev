---
import '@styles/global.css';
import ToggleButton from '@components/ToggleButton.astro';
import Container from '@components/ui/Container.astro';
import Meta from '../components/Meta.astro';

type LayoutProps = {
  title?: string;
  description?: string;
  url?: string;
  image?: string;
}

const { title = 'algoro.dev', description, url, image } = Astro.props as LayoutProps;
const pathname = new URL(Astro.request.url).pathname;
const isActive = (href: string) => pathname === href || pathname.startsWith(href + '/');
---

<!doctype html>
<html lang="en" class="scheme-light dark:scheme-dark">
  <head>
    <Meta title={title} description={description} url={url} image={image} />
    <script>
      (() => {
        const root = document.documentElement;
        const stored = localStorage.getItem('theme');
        const systemDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        const wantsDark = stored ? stored === 'dark' : systemDark;
        root.classList.toggle('dark', wantsDark);
      })();
    </script>
  </head>
  <body>
    <header
      class="border-border bg-[color-mix(in oklab, var(--color-card) 80%, transparent)] border-b backdrop-blur"
    >
      <Container class="flex h-14 items-center justify-between">
        <a href="/" class="font-bold">algoro.dev</a>
        <nav class="flex items-center gap-3">
          <a
            href="/about"
            class={`text-primary hover:underline ${isActive('/about') ? 'font-semibold underline' : ''}`}
            >About</a
          >
          <a
            href="/blog"
            class={`text-primary hover:underline ${isActive('/blog') ? 'font-semibold underline' : ''}`}
            >Blog</a
          >
          <ToggleButton />
        </nav>
      </Container>
    </header>
    <main id="main" class="py-10">
      <Container>
        <slot />
      </Container>
    </main>
    <footer class="border-border border-t py-10">
      <Container class="text-sm opacity-80 flex justify-between">
        <p>Â© {new Date().getFullYear()} algoro.dev</p>
        <p>Difficult many things are, but impossible nothing is.</p>
      </Container>
    </footer>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
