---
import '@styles/global.css';
import ToggleButton from '@components/ToggleButton.astro';
import Container from '@components/ui/Container.astro';

const { title = 'algoro.dev' } = Astro.props;
---

<!doctype html>
<html lang="en" class="scheme-light dark:scheme-dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script>
      (() => {
        const root = document.documentElement;
        const stored = localStorage.getItem('theme');
        const systemDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        const wantsDark = stored ? stored === 'dark' : systemDark;
        root.classList.toggle('dark', wantsDark);
      })();
    </script>
  </head>
  <body>
    <header class="border-b border-border bg-[color-mix(in oklab, var(--color-card) 80%, transparent)] backdrop-blur">
      <Container class="flex h-14 items-center justify-between">
        <a href="/" class="font-bold">algoro.dev</a>
        <nav class="flex items-center gap-3">
          <a href="/blog" class="hover:underline text-primary">Blog</a>
          <ToggleButton />
        </nav>
      </Container>
    </header>

    <main id="main" class="py-10">
      <Container>
        <slot />
      </Container>
    </main>

    <footer class="py-10 border-t border-border">
      <Container class="opacity-80 text-sm">
        Â© {new Date().getFullYear()} algoro.dev
      </Container>
    </footer>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
